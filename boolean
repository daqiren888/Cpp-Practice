#include <iostream>
using namespace std;
 
int main()
{
   int a = 5;
   int b = 20;
   int c ;
 
   if ( a && b )
   {
      cout << "Line 1 - ture"<< endl ;
   }
   if ( a || b )
   {
      cout << "Line 2 - ture"<< endl ;
   }
   /* 改变 a 和 b 的值 */
   a = 0;
   b = 10;
   if ( a && b )
   {
      cout << "Line 3 - ture"<< endl ;
   }
   else
   {
      cout << "Line 4 - false"<< endl ;
   }
   if ( !(a && b) )
   {
      cout << "Line 5 - ture"<< endl ;
   }
   return 0;
}
